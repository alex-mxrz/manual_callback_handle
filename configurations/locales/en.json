{
    "on_start": {
        "welcome_message": {
            "text": "Greetings! Please select the language of our bot using the buttons below. This message is currently displayed in the language you have set in Telegram. Remember that our bot main language is English.",
            "options": {
                "entities": [
                    {
                        "type": "bold",
                        "offset": 0,
                        "length": 10
                    },
                    {
                        "type": "bold",
                        "offset": 170,
                        "length": 17
                    },
                    {
                        "type": "bold",
                        "offset": 191,
                        "length": 7
                    }
                ],
                "disable_web_page_preview": true,
                "disable_notification": false,
                "protect_content": true,
                "allow_sending_without_reply": true,
                "reply_markup": {
                    "inline_keyboard": [
                        [
                            {
                                "text": "Current",
                                "callback_data": "cb_language_keep"
                            }
                        ],
                        [
                            {
                                "text": "Ukrainian",
                                "callback_data": "cb_language_change_uk"
                            },
                            {
                                "text": "Latvian",
                                "callback_data": "cb_language_change_lv"
                            }
                        ],
                        [
                            {
                                "text": "Lithuanian",
                                "callback_data": "cb_language_change_lt"
                            },
                            {
                                "text": "Russian",
                                "callback_data": "cb_language_change_ru"
                            }
                        ]
                    ]
                }
            }
        }
    },
    "on_language": {
        "language_keep": {
            "text": "At this time, you have selected to use the Telegram interface language. However, this option can be modified in the settings at a later time.",
            "options": {
                "entities": [
                    {
                        "type": "bold",
                        "offset": 43,
                        "length": 8
                    },
                    {
                        "type": "bold",
                        "offset": 116,
                        "length": 8
                    }
                ],
                "disable_web_page_preview": true,
                "disable_notification": false,
                "protect_content": true,
                "allow_sending_without_reply": false
            }
        },
        "language_change": {
            "text": "Thank you for changing the interface language to English. You can modify the language in the settings later if necessary.",
            "options": {
                "entities": [
                    {
                        "type": "bold",
                        "offset": 49,
                        "length": 7
                    },
                    {
                        "type": "bold",
                        "offset": 93,
                        "length": 8
                    },
                    {
                        "type": "bold",
                        "offset": 153,
                        "length": 10
                    }
                ],
                "disable_web_page_preview": true,
                "disable_notification": false,
                "protect_content": true,
                "allow_sending_without_reply": false
            }
        }
    }
}
